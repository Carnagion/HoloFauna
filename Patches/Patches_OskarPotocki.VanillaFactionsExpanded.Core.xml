<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Vanilla Expanded Framework</li>
		</mods>

		<match Class="PatchOperationSequence">
			<operations>

				<!-- Gives floating comp to holo boomalope and holo boomrat -->
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName="HoloFauna_HoloBoomalope" or defName="HoloFauna_HoloBoomrat"]/comps</xpath>
					<value>
						<li Class="AnimalBehaviours.CompProperties_Floating"/>
					</value>
				</li>

				<!-- Gives floating comp to holo boombat if it exists -->
				<li Class="PatchOperationConditional">
					<success>Always</success>
					<xpath>/Defs/ThingDef[defName="HoloFauna_HoloAEXP_Boombat"]</xpath>

					<match Class="PatchOperationAdd">
						<xpath>/Defs/ThingDef[defName="HoloFauna_HoloAEXP_Boombat"]/comps</xpath>
						<value>
							<li Class="AnimalBehaviours.CompProperties_Floating"/>
						</value>
					</match>
				</li>

			</operations>
		</match>

	</Operation>

</Patch>